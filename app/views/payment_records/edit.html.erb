<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h3 class="my-3">支払実績編集</h3>
　    <%= form_with model: @payment_record, local:true do |f| %>
　    <div class="form-group row">
        <%= f.label :登録日付, class: "col-3" %>
        <%= f.text_field :date, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :支払金額, class: "col-3" %>
        <%= f.text_field :payment, class: "form-control col-7" %>
        <p class="col-1"円></p>
      </div>
      <div class="form-group row">
        <%= f.label :カテゴリ, class: "col-3" %>
        <i class='col-4 mt-3  text-right'><%= link_to '', categories_path, class: "fas fa-plus-circle text-right" %></i>
        <%= f.collection_select :category_id, Category.all, :id, :category_name, prompt: "選択してください", class: 'form-control col-7' %>
      </div>
       <div class="form-group row">
        <%= f.label :支払方法, class: "col-3" %>
        <%= f.text_field :payment_method, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :メモ, class: "col-3" %>
        <%= f.text_area :memo, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :証憑画像, class: "col-3" %>
        <%= f.attachment_field :voucher, class: "form col-7" %>
      </div>
      <div class="form-group">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>