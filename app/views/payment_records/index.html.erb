<div class='container'>
  <div class='row'>
    <h3 class="col-8 mt-3 ">入力画面一覧</h3>
  </div>

   <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h3 class="my-3">支払情報入力</h3>
　    <%= form_with model: @payment_record, local:true do |f| %>
　     <div class="form-group row">
        <%= f.label :登録日付, class: "col-3" %>
        <%= f.text_field :date, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :支払金額, class: "col-3" %>
        <%= f.text_field :payment, class: "form-control col-7" %>
        <p class="col-1"円></p>
      </div>
      <div class="form-group row">
        <%= f.label :カテゴリ, class: "col-3" %>
        <i class='col-4 mt-3  text-right'><%= link_to 'カテゴリ追加削除', categories_path, class: "fas fa-plus-circle text-right" %></i>
        <%= f.collection_select :category_id, Category.all, :id, :category_name, prompt: "選択してください", class: 'form-control col-7' %>
      </div>
       <div class="form-group row">
        <%= f.label :支払方法, class: "col-3" %>
        <%= f.text_field :payment_method, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :メモ, class: "col-3" %>
        <%= f.text_area :memo, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :証憑画像, class: "col-3" %>
        <%= f.attachment_field :voucher, class: "form col-7" %>
      </div>
      <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
　</div>


  <table class='table table-hover '>
  　<thead>
    <tr>
      <th class="col-1">日付</th>
      <th class="col-3">支払金額</th>
      <th class="col-2">カテゴリ</th>
      <th class="col-2">支払方法</th>
      <th class="col-2">メモ</th>
      <th class="col-2">証憑画像</th>
    </tr>
    </thead>
    <tbody>
    <% @payment_records.each do |payment_record| %>
    　<tr>
        <td><%= link_to payment_record.date, payment_record_path(payment_record) %></td>
        <td><%= payment_record.payment.to_i.to_s(:delimited) %></td>
        <td><%= payment_record.category.category_name %></td>
        <td><%= payment_record.payment_method %></td>
        <td><%= payment_record.memo %></td>
        <td><%= attachment_image_tag payment_record, :voucher, format: 'jpeg', class: 'img-fluid' %></td>
      </tr>
    <% end %>
    <%# binding.pry %>
    <h3>支払金額合計　<%= @total_payment.to_s(:delimited) %>円<%= link_to "/予算　#{@number.to_i.to_s(:delimited)}円", edit_budget_path(@budget.budget_id) %></h3>
    </tbody>
  </table>
<%= paginate @payment_records %>
</div>