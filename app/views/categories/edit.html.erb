<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-3">カテゴリ編集</h3>
      <%= form_with model:@category,url: category_path(@category.id), local:true do |f| %>
        <%= f.label :カテゴリ名 %>
        <%= f.text_field :category_name %>
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>