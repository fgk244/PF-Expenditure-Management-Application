<div class="container">
  <div class="row">
    <div class="col-5">
      <h3 class="my-3">カテゴリ一覧・追加・削除</h3>
      <%= form_with model:@newcategory,url: categories_path, lacal:true do |f| %>
        <div class="form-group">
          <%= f.label :カテゴリ名 %>
          <%= f.text_field :category_name, placeholder: "カテゴリ名" %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>カテゴリ</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.category_name %></td>
            <td><%= link_to '編集する', edit_category_path(category.id), class: "btn btn-success" %></td>
            <td><%= link_to "削除する", category_path(category.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>